{
  "compilerOptions": {
    "module": "system",
    "target": "es5",
    "declaration": true,
    "sourceMap": false,
    "importHelpers": true,
    "pretty": true,
    "preserveConstEnums": true,
    "removeComments": false,
    "outFile": "./ai.js",
    "alwaysStrict": true,
    "strict": true,
    "lib": [
      "es5",
      "dom",
      "es2015.promise",
      "es6"
    ]
  },
  "include": [
    "src",
    "lib"
  ],
  "exclude": [
    "node_modules"
  ]
}